@model Item
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-success">
    <div class="panel-heading">
        <h3><i class="fa fa-tint"></i> Update Item</h3>
    </div>
    <div class="panel-body">
        <form asp-action="Create" asp-controller="Item" enctype="multipart/form-data" method="POST">
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="input-validation-error"></div>
            <div class="form-group input-group">
                <span class="input-group-addon">Item Name</span>
                <input asp-for="Name" value="@Model.Name" type="text" autofocus class="form-control" required />
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea asp-for="Description" value="@Model.Description" name="description" class="form-control"></textarea>
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon">Quantity</span>
                <input asp-for="Quantity" value="@Model.Quantity" type="number" min="0" name="qty" class="form-control" />
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon">Units</span>
                <input type="number" asp-for="Unit" min="0" name="unit" value="1" class="form-control" />
            </div>
            <div class="form-group input-group">
                <span class="input-group-addon">Supplier</span>
                <input asp-for="SupplierName" value="@Model.SupplierName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Picture</label>
                <input asp-for="Image" type="file" name="image">
            </div>
            <div class="col-sm-6">
                <img src="~/@Model.Image" class="img-responsive" alt="" style="width: 100px; height: 100px">
            </div>
            <div class="clearfix" style="margin-bottom: 30px"></div>
            <input type="submit" value="Save" class="btn btn-success btn-lg">
        </form>
    </div>
</div>
