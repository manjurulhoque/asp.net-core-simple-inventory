@model IEnumerable<Chemical>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Items
        </h1>
        <div class="input-group">
            <a href="@Url.Action("Create", "Chemical")" class="btn btn-success">Add New</a>
        </div>
        <br />

        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a>
            </li>
            <li class="active">Items</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Chemical Name</th>
                        <th>Qty</th>
                        <th>Units</th>
                        <th>description</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td class="text-danger text-center" colspan="4"><strong>*** EMPTY ***</strong></td>
                        </tr>
                    }
                    else
                    {
                        foreach (var chemical in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Item" asp-action="Show" asp-route-id="@chemical.Id">@chemical.Name</a>
                                </td>
                                <td class="text-center">
                                    <a href=""><i class="text-success fa fa-plus-circle fa-lg"></i></a>
                                    @chemical.Quantity
                                    <a href=""><i class="text-danger fa fa-minus-circle fa-lg"></i></a>
                                </td>
                                <td class="text-center">
                                    <a href=""><i class="text-success fa fa-plus-circle fa-lg"></i></a>
                                    @chemical.Unit
                                    <a href=""><i class="text-danger fa fa-minus-circle fa-lg"></i></a>
                                </td>
                                <td class="text-center">
                                    @chemical.Description
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


